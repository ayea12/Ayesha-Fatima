<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/property_image_1"
        android:layout_width="334dp"
        android:layout_height="305dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="39dp"
        android:scaleType="centerCrop"
        android:src="@drawable/food1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/property_description_1"
        android:layout_width="333dp"
        android:layout_height="27dp"
        android:layout_marginTop="28dp"
        android:text="Sticky Gochujang Tofu with Herbs and Peanuts"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/property_image_1"
        app:layout_constraintStart_toStartOf="@+id/property_image_1"
        app:layout_constraintTop_toBottomOf="@+id/property_image_1" />

</androidx.constraintlayout.widget.ConstraintLayout>